    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "Active zone from signal_zone (buy_band / neutral / sell_band). Uses topk(1, signal_zone) so that the label of the active zone is shown.",
      "fieldConfig": {
        "defaults": {
          "displayName": "${__field.labels.signal_zone}",
          "mappings": [
            {
              "options": { "match": "null", "result": { "text": "No data" } },
              "type": "special"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 80 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 5, "x": 0, "y": 1 },
      "id": 2,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "percentChangeColorMode": "standard",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showPercentChange": false,
        "textMode": "name",
        "wideLayout": true
      },
      "pluginVersion": "12.2.1",
      "targets": [
        { "expr": "topk(1, signal_zone)", "instant": true, "refId": "A" }
      ],
      "title": "Zone (current)",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "OPEN = trading allowed; CLOSED = hard block.",
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": { "text": "CLOSED" },
                "1": { "text": "OPEN" }
              },
              "type": "value"
            },
            {
              "options": { "match": "null", "result": { "text": "No data" } },
              "type": "special"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 3, "x": 5, "y": 1 },
      "id": 3,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "percentChangeColorMode": "standard",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showPercentChange": false,
        "textMode": "auto",
        "wideLayout": true
      },
      "pluginVersion": "12.2.1",
      "targets": [
        { "expr": "gate_state{gate_state=\"open\"}", "instant": true, "refId": "A" }
      ],
      "title": "Gate",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "Sign of (SELL distance − BUY distance): negative → BUY closer; positive → SELL closer.",
      "fieldConfig": {
        "defaults": {
          "decimals": 1,
          "mappings": [
            {
              "options": {
                "from": -1000000000,
                "result": { "text": "BUY next" },
                "to": -1e-7
              },
              "type": "range"
            },
            {
              "options": {
                "from": 1e-7,
                "result": { "text": "SELL next" },
                "to": 1000000000
              },
              "type": "range"
            },
            {
              "options": { "0": { "text": "Either" } },
              "type": "value"
            },
            {
              "options": { "match": "null", "result": { "text": "No data" } },
              "type": "special"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 80 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 5, "x": 8, "y": 1 },
      "id": 4,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "percentChangeColorMode": "standard",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showPercentChange": false,
        "textMode": "value",
        "wideLayout": true
      },
      "pluginVersion": "12.2.1",
      "targets": [
        { "expr": "(dist_to_sell_bps - dist_to_buy_bps)", "instant": true, "refId": "A" }
      ],
      "title": "Nearest side",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "Minimum of (distance to BUY, distance to SELL). Goes to 0 when a band is entered.",
      "fieldConfig": {
        "defaults": {
          "decimals": 1,
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 80 }
            ]
          },
          "unit": "bps"
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 5, "x": 13, "y": 1 },
      "id": 5,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "percentChangeColorMode": "standard",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showPercentChange": false,
        "textMode": "value",
        "wideLayout": true
      },
      "pluginVersion": "12.2.1",
      "targets": [
        { "expr": "min(dist_to_buy_bps, dist_to_sell_bps)", "instant": true, "refId": "A" }
      ],
      "title": "Distance to next action (bps)",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "Net decision this bar: -1 SELL, 0 HOLD/SKIP, +1 BUY.",
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": { "text": "HOLD / SKIP" },
                "1": { "text": "EXEC BUY" },
                "-1": { "text": "EXEC SELL" }
              },
              "type": "value"
            },
            {
              "options": { "match": "null", "result": { "text": "No data" } },
              "type": "special"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 80 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "id": 6,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "percentChangeColorMode": "standard",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showPercentChange": false,
        "textMode": "value",
        "wideLayout": true
      },
      "pluginVersion": "12.2.1",
      "targets": [
        {
          "expr": "sum(trade_decision{trade_decision=\"exec_buy\"}) - sum(trade_decision{trade_decision=\"exec_sell\"})",
          "instant": true,
          "refId": "A"
        }
      ],
      "title": "Decision (this bar)",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "First applicable skip reason (if any). If trading is quiet but this says 'None', it means we're simply not in a band or below threshold.",
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": { "text": "None" },
                "1": { "text": "threshold" },
                "2": { "text": "balance" },
                "3": { "text": "min_notional" },
                "4": { "text": "cooldown" },
                "5": { "text": "gate_closed" },
                "6": { "text": "delta_zero" },
                "7": { "text": "order_error" }
              },
              "type": "value"
            },
            {
              "options": { "match": "null", "result": { "text": "No data" } },
              "type": "special"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 80 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 5 },
      "id": 7,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "percentChangeColorMode": "standard",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showPercentChange": false,
        "textMode": "value",
        "wideLayout": true
      },
      "pluginVersion": "12.2.1",
      "targets": [
        {
          "expr": "sum(1 * trade_decision{trade_decision=\"skip_threshold\"}) + sum(2 * trade_decision{trade_decision=\"skip_balance\"}) + sum(3 * trade_decision{trade_decision=\"skip_min_notional\"}) + sum(4 * trade_decision{trade_decision=\"skip_cooldown\"}) + sum(5 * trade_decision{trade_decision=\"skip_gate_closed\"}) + sum(6 * trade_decision{trade_decision=\"skip_delta_zero\"}) + sum(7 * trade_decision{trade_decision=\"skip_order_error\"})",
          "instant": true,
          "refId": "A"
        }
      ],
      "title": "Blocker (if any)",
      "type": "stat"
    },

